[core]
    editor = vim
    excludesfile = ~/.gitignore
    autocrlf = input
    whitespace = trailing-space,tab-in-indent,tabwidth=4
[color]
	 diff = auto
	 status = auto
	 branch = auto
	 interactive = auto
	 ui = auto
	 pager = on
[help]
    autocorrect = 1
[pull]
	rebase = true
[push]
	 default = simple
	 followTags = true
[fetch]
	prune = true
[diff]
	mnemonicprefix = true
[status]
#	showUntrackedFiles = no
	relativePaths = true
[commit]
	verbose = true
[alias]
	 wt = worktree
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    sparse-file = rev-parse --git-path info/sparse-checkout
    sparse-dir = rev-parse --git-path info
    type = cat-file -t
    dump = cat-file -p
    pullr = pull --rebase
    dag = log --graph --pretty=format:'%Cblue%h%Creset -%C(yellow)%d%Creset %s%Cgreen(%cr) %C(magenta)<%an>%Creset' --abbrev-commit --date=relative
    list = show --pretty=format:'' --name-only
